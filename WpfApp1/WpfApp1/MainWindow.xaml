<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Main Menu" Height="350" Width="525">
    <Grid>
        
        <DockPanel LastChildFill="False" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button DockPanel.Dock="Top" Content="Create User" Width="200" Margin="0,0,0,10" FontWeight="Bold" Click="Button_Click" />
            <Button DockPanel.Dock="Top" Content="Show All Users" Width="200" Margin="0,0,0,10" FontWeight="Bold" Click="Button_Click_2"/>
            <Button DockPanel.Dock="Top" Content="Exit" Width="200" FontWeight="Bold" Click="Button_Click_1" />

        </DockPanel>

    </Grid>
</Window>
